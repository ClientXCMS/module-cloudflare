
<div class="form-group custom-control custom-switch mt-2">
    <input type="checkbox" class="custom-control-input" id="cloudflare_enabled" name="cloudflare_enabled" data-toggle="collapse"
           data-target="#smtpGroup" {% if config('cloudflare').enabled == 'true' %} checked {% endif %}
           value="{{ config('cloudflare').enabled == 'true' ? 'yes' : 'no' }}">
    <label class="custom-control-label" for="cloudflare_enabled">Cloudflare</label>
</div>
</div>
<div id="smtpGroup" class="{{ config('cloudflare').enabled == 'true' ? 'show' : 'collapse' }}">
    <div class="card card-body mb-2">
        <div class="row">
            <div class="col-md-12 col-sm-12">
                {{ field('cloudflare_forwardedfor', config('cloudflare').forwardedfor, "Forwarded For Key") }}
            </div>
        </div>
    </div>
</div>
